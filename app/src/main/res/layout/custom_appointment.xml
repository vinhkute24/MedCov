<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mor">

    <ImageView
        android:id="@+id/r_appPImg"
        android:layout_width="275dp"
        android:layout_height="120dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="12dp"
        android:layout_weight="1"
        android:background="#FFFFFF"
        tools:srcCompat="@tools:sample/avatars" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="12dp"
        android:layout_marginRight="12dp"
        android:layout_weight="1"
        android:background="#FFFFFF"
        android:orientation="vertical">

        <TextView
            android:id="@+id/r_appPName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="3dp"
            android:fontFamily="@font/baloo"
            android:text="Doctor Hello"
            android:textColor="@color/quang"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/r_appPHour"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="1dp"
            android:fontFamily="@font/baloo"
            android:text="Hour"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/r_appPDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dp"
            android:fontFamily="@font/baloo"
            android:text="Date"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/r_appPField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dp"
            android:fontFamily="@font/baloo"
            android:text="Expertise"
            android:textColor="#000000"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/r_appPNote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dp"
            android:fontFamily="@font/baloo"
            android:text="Note"
            android:textColor="@color/black" />
    </LinearLayout>
</LinearLayout>